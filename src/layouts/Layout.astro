---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-white scroll-smooth font-sans">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="21 días - Clínica de Psicología en Torrent. Especialistas en terapia individual, parejas y familiar." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>